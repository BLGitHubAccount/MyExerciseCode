<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Line X1="10" Y1="20" X2="400" Y2="20" Stroke="Black" StrokeThickness="10"/>
        <Line X1="10" Y1="40" X2="400" Y2="40" Stroke="Orange" StrokeThickness="8"/>
        <Line X1="10" Y1="60" X2="400" Y2="60" Stroke="Green" StrokeThickness="6"/>
        <Line X1="10" Y1="80" X2="400" Y2="80" Stroke="Blue" StrokeDashArray="1" StrokeThickness="5"/>
        <Line X1="10" Y1="100" X2="400" Y2="100" Stroke="Red" StrokeEndLineCap="Flat"  StrokeThickness="5"/>
        <Line X1="10" Y1="120" X2="400" Y2="120" Stroke="Red" StrokeEndLineCap="Round"  StrokeThickness="5"/>
        <Line X1="10" Y1="140" X2="400" Y2="140"  StrokeThickness="10">
            <Line.Stroke>
                <LinearGradientBrush EndPoint="0,0.5" StartPoint="01,0.5">
                    <GradientStop Color="Blue"/>
                    <GradientStop Offset="1"/>

                </LinearGradientBrush>
            </Line.Stroke>
        </Line>


    </Grid>
</Window>
