<Window x:Class="WpfApplication1.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        xmlns:prop="clr-namespace:WpfApplication1.Properties"
        mc:Ignorable="d"
        Title="login" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel  Grid.Row="1" Orientation="Horizontal">
            <TextBlock Width="40" Text="{x:Static prop:Resources.UserName}" Height="30"/>
            <TextBox Width="200" Margin="20,0,10,0" Height="30" />
        </StackPanel>
        <StackPanel  Grid.Row="3" Orientation="Horizontal">
            <TextBlock Width="40" Text="{x:Static prop:Resources.Password}" Height="30"/>
            <TextBox Width="200" Margin="20,0,10,1" Height="30" />            
        </StackPanel>
        

    </Grid>
</Window>
